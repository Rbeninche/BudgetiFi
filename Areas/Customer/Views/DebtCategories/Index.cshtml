@model IEnumerable<DebtCategory>

@{
    ViewData["Title"] = "Debt category";

}




<div class="container pTop">

    <div class="row mb-2">
        <div class="col-6">
            <h2 class="text-success">Here's a lis of your debt category</h2>
        </div>
        
        <div class="col-6 text-right">
           <partial name="_CreateButtonPartial" />
        </div>
        

    </div>

    

    @if (Model.Count() > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        
                        <td>
                            <partial name="_tableButtonPartial" model="item.Id" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    }
    else
    {
<blockquote cite="https://www.daveramsey.com/blog/the-truth-about-debt">
    <p>The rich rule over the poor, and the borrower is slave to the lender</p>

</blockquote>
    }


</div>



@section Scripts {

    <script>
        $(document).ready(function () {
            $('#footer').empty();
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}





