@model CreditorCategory

@{
    ViewData["Title"] = "Create";
}

<div class="container pTop content">
    <h4 class="text-success">Add Institution name here:</h4>


    <hr />
    <partial name="_StatusMessage" model=@ViewBag.StatusMessage />

    <div class="col-md-7">
        <form asp-action="Create" class="row-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="col-auto">
                    <label asp-for="Name" class="control-label"></label>


                </div>
                <div class="col-auto">
                    <input asp-for="Name" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>

            </div>
            <div class="form-group">
                <div class="col-auto">
                    <label asp-for="DebtCategoryId" class="control-label"></label>
                </div>
                <div class="col-auto">
                    <select asp-for="DebtCategoryId" class="form-control" asp-items="ViewBag.DebtCategoryId"></select>
                </div>


            </div>
          
            <partial name="_CreateAndBackButton" />
        </form>
    </div>




</div>




@section Scripts {

  
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
