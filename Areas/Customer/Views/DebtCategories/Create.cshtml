@model DebtCategory

@{
    ViewData["Title"] = "Create";
}

    <div class="bg-image">
        <div class="container-fluid pTop content">
            <h4 class="text-success">What type of Debt you have?</h4>

            
            <hr />

            <partial name="_StatusMessage" model=@ViewBag.StatusMessage />
            <div class="col-md-7">
                <form method="post" asp-action="Create" class="row-form">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <div class="col-auto">
                            <label asp-for="Name" class="col-form-label font-weight-bold"></label>
                        </div>
                        <div class="col-auto">
                            <input asp-for="Name" class="form-control" />
                        </div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                   
                       
                            <partial name="_CreateAndBackButton" />
                       
                 

                </form>
            </div>
           
           
            

      
        </div>
    </div>




@section Scripts {

    <script>
        $(document).ready(function () {
            $('#footer').empty();
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
