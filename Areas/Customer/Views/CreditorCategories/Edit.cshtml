@model BudgetiFi.Models.CreditorCategory

@{
    ViewData["Title"] = "Edit";
}

<div class="container pTop">

    <h3>Edit Creditor Category</h3>

    <div>
        <hr />
        <div class="col-md-7">
            <form asp-action="Edit" class="row-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <div class="col-auto">
                        <label asp-for="Name" class="control-label"></label>

                    </div>
                    <div class="col-auto">
                        <input asp-for="Name" class="form-control" />

                    </div>


                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="col-auto">
                        <label asp-for="DebtCategoryId" class="control-label"></label>

                    </div>
                    <div class="col-auto">
                        <select asp-for="DebtCategoryId" class="form-control" asp-items="ViewBag.DebtCategoryId"></select>

                    </div>


                    <span asp-validation-for="DebtCategoryId" class="text-danger"></span>
                </div>
                <partial name="_EditAndBackButton" model="Model.Id" />


            </form>
        </div>
    </div>

</div>


@section Scripts {

    <script>
        $(document).ready(function () {
            $('#footer').empty();
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


