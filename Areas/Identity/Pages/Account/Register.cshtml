@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div id="home-section">
    <div class="dark-overlay">
        <div class="home-inner container">
            <div class="row viewport-60">
                <div class="col-lg-8 d-none d-lg-block">
                    <h1 class="display-4">
                        Eliminate <strong class="text-danger">Debt</strong>
                        and Start Building<strong class="text-success"> Wealth</strong> Today
                    </h1>
                    <div class="d-flex">
                        <div class="p-4 align-self-start">
                            <i class="fas fa-check fa-2x"></i>
                        </div>
                        <div class="p-4 align-self-end">
                            <p class="h5"><strong> Home — </strong>Total mortgage debt rose to $9.4-trillion, an increase of $407-billion from the same juncture in 2017.</p>
                        </div>

                    </div>
                    <div class="d-flex">
                        <div class="p-4 align-self-start">
                            <i class="fas fa-check fa-2x"></i>
                        </div>
                        <div class="p-4 align-self-end">
                            <p class="h5"><strong> Auto — </strong>Total auto debt in Q2 of 2019 is 1.3-trllion, a jump of $59-billion from the same time in 2018.</p>
                        </div>

                    </div>
                    <div class="d-flex">
                        <div class="p-4 align-self-start">
                            <i class="fas fa-check fa-2x"></i>
                        </div>
                        <div class="p-4 align-self-end">
                            <p class="h5"><strong> Credit Cards — </strong> Credit-card loans crossed the $1 trillion mark, reaching $1.08-trillion in Q3 of 2019.</p>
                        </div>

                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="card bg-success text-center card-form">
                        <div class="card-body">
                            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <h3>Sign Up Today</h3>
                                <!--<p>Please fill out this form to register</p>-->
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    <input asp-for="Input.Email" class="form-control form-control-lg" placeholder="Email">
                                </div>
                                <div class="form-group">
                                    <input asp-for="Input.Password" class="form-control form-control-lg" placeholder="Password">
                                </div>
                                <div class="form-group">
                                    <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg" placeholder="Confirm Password">
                                </div>
                                <input type="submit" value="Submit" class="btn btn-outline-light btn-block">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!--  contact section-->
<section id="contact" class="py-5">
    <div class="container">
        <div class="row height-60 align-items-baseline">
            <div class="col-lg-6 col-sm-10 mx-auto my-3 ">
                <div class="card text-center">
                    <div class="card-header text-centertext-uppercase">
                        <h1 class="text-uppercase">contact form</h1>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="input-group my-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="input-text"><i class="fas fa-user"></i></span>
                                </div>
                                <input type="text" class="form-control form-control-lg text-capitalize" placeholder="Enter your name here">
                            </div>
                            <div class="input-group my-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="input-phone"><i class="fas fa-phone"></i></span>
                                </div>
                                <input type="number" class="form-control form-control-lg text-capitalize" placeholder="Enter your phone number here">
                            </div>



                            <div class="input-group my-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="input-email"><i class="fas fa-envelope"></i></span>
                                </div>
                                <input type="email" class="form-control form-control-lg text-capitalize" placeholder="Enter your email here">
                            </div>

                            <div class="input-group my-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="input-username"><i class="fas fa-map-marked"></i></span>
                                </div>
                                <input type="text" class="form-control form-control-lg text-capitalize" placeholder="Enter your address here">
                            </div>

                            <button type="submit" class="btn btn-block btn-lg text-uppercase contact-btn"><i class="far fa-hand-point-right mr-2"></i>click here</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 d-none d-lg-block  text-center mb-5 align-self-center">
                <img src="~/images/money4.jpg" alt="images" class="img-fluid rounded">



            </div>

        </div>
    </div>
</section>
<!-- end of contact section-->



@section Scripts {
    <partial name="_ValidationScriptsPartial" />


}
