@model BudgetCategory

@{
    ViewData["Title"] = "Delete";
}

<div class="container pTop content">


    <h3>Are you sure you want to delete this?</h3>
    <div>
        <hr />

        <div class="col-md-7">
            <form asp-action="Delete" class="row-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <div class="col-auto">
                        <label asp-for="Name" class="col-form-label font-weight-bold"></label>
                    </div>
                    <div class="col-auto">
                        <input asp-for="Name" readonly class="form-control" />
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <partial name="_DeleteAndBackButton" model="Model.Id" />

            </form>
        </div>
    </div>

</div>

@section Scripts {


    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



